# Copy this to .env and fill in your values

# OpenAI (optional — leave blank to use local sentence-transformers embeddings)
OPENAI_API_KEY=sk-...

# Application
DEBUG=false
APP_NAME=Smart Document Context Handler

# Database (used by docker-compose automatically)
DATABASE_URL=postgresql+asyncpg://sdch:sdch_pass@localhost:5432/sdch

# Redis (used by docker-compose automatically)
REDIS_URL=redis://localhost:6379/0

# File storage
UPLOAD_DIR=/tmp/sdch_uploads
MAX_FILE_SIZE_MB=50

# Tier thresholds (tokens) — defaults match the spec
TIER1_MAX_TOKENS=12000
TIER2_MAX_TOKENS=25000
TIER3_MAX_TOKENS=50000

# RAG settings
RAG_TOP_K=10
CHUNK_TARGET_TOKENS=512
CHUNK_OVERLAP_TOKENS=50
